<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LoginFragment"
    android:background="@color/backgroundColorMain"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="E-commerce"
        android:textSize="40sp"
        android:fontFamily="@font/boldfont"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#FFF222"
        android:src="@drawable/ic_shopping_cart_blue_24dp" />

    <EditText
        android:id="@+id/loginEt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:layout_centerInParent="true"
        android:hint="Enter Email"/>

    <EditText
        android:id="@+id/passwordEt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:layout_below="@+id/loginEt"
        android:hint="Enter Your Password"/>

    <Button
        android:id="@+id/fragmentLoginBtn"
        android:layout_width="match_parent"
        android:layout_below="@+id/passwordEt"
        android:layout_height="wrap_content"
        android:background="@drawable/round_yellow_background"
        android:text="Login"/>


</LinearLayout>