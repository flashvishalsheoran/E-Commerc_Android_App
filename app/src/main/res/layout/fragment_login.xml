<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LoginFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">


    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/round_image_main"
        android:src="@drawable/ic_shopping_cart_blue_24dp"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In Now"
        android:textSize="30sp"
        android:fontFamily="@font/heading1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please log in to continue using the app"
        android:textSize="20sp"
        android:fontFamily="@font/heading1"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/loginEt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:layout_centerInParent="true"
        android:background="@drawable/round_edittext"
        android:paddingLeft="15dp"
        android:hint="Enter Email"

        />

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/passwordEt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:layout_below="@+id/loginEt"
        android:hint="Enter Your Password"
        android:background="@drawable/round_edittext"
        android:paddingLeft="15dp"/>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/fragmentLoginBtn"
        android:layout_width="200dp"
        android:layout_below="@+id/passwordEt"
        android:layout_height="wrap_content"
        android:background="@drawable/round_blue"
        android:text="Login"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account"
            android:fontFamily="@font/heading1"
            android:textColor="@color/black"
            android:gravity="center"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:fontFamily="@font/heading1"
            android:textColor="@color/blue"
            android:gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>




</LinearLayout>