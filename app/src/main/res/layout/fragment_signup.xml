<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="devops.vishal.ecommerce.fragment.SignupFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    >


    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/round_image_main"
        android:src="@drawable/ic_shopping_cart_blue_24dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up Now"
        android:textSize="20sp"
        android:fontFamily="@font/heading1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please fill the details to create an account"
        android:textSize="15sp"
        android:fontFamily="@font/heading1"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/userNameEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:lines="1"
            android:layout_centerInParent="true"
            android:hint="Enter Your Full Name"
            android:background="@drawable/round_edittext"
            android:paddingLeft="15dp"/>

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/phoneEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="phone"
            android:layout_below="@+id/loginEt"
            android:hint="Enter Your Phone Number"
            android:background="@drawable/round_edittext"
            android:paddingLeft="15dp"/>

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/loginEt"
            android:hint="Enter Your Email Address"
            android:background="@drawable/round_edittext"
            android:paddingLeft="15dp"/>

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/passEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:layout_below="@+id/loginEt"
            android:hint="Enter a New Password"
            android:background="@drawable/round_edittext"
            android:paddingLeft="15dp"/>

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/rePassEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:layout_below="@+id/loginEt"
            android:hint="Enter Your Password Again"
            android:background="@drawable/round_edittext"
            android:paddingLeft="15dp"/>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/fragmentSignupBtn"
            android:layout_width="200dp"
            android:layout_below="@+id/passwordEt"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white"
            android:text="Signup"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account"
            android:fontFamily="@font/heading1"
            android:textColor="@color/black"
            android:gravity="center"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:fontFamily="@font/heading1"
            android:textColor="@color/blue"
            android:gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>




</LinearLayout>