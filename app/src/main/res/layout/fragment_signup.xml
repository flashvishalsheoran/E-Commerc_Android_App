<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="devops.vishal.ecommerce.fragment.SignupFragment"
    android:orientation="vertical"
    android:background="@color/backgroundColorMain"
    android:gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="E-commerce"
        android:textSize="40sp"
        android:fontFamily="@font/boldfont"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#FFF222"
        android:src="@drawable/ic_shopping_cart_blue_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/userNameEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:lines="1"
            android:layout_centerInParent="true"
            android:hint="Enter Your Full Name"/>

        <EditText
            android:id="@+id/phoneEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="phone"
            android:layout_below="@+id/loginEt"
            android:hint="Enter Your Phone Number"/>

        <EditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/loginEt"
            android:hint="Enter Your Email Address"/>

        <EditText
            android:id="@+id/passEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:layout_below="@+id/loginEt"
            android:hint="Enter a New Password"/>

        <EditText
            android:id="@+id/rePassEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:layout_below="@+id/loginEt"
            android:hint="Enter Your Password Again"/>

        <Button
            android:id="@+id/fragmentSignupBtn"
            android:layout_width="match_parent"
            android:layout_below="@+id/passwordEt"
            android:layout_height="wrap_content"
            android:background="@drawable/round_yellow_background"
            android:text="Signup"/>




    </LinearLayout>


</LinearLayout>